      "redirectUris": [
        "http://localhost:4200/*",
        "http://127.0.0.1:4200/*",
        "http://0.0.0.0:4200/*",
        "http://host.docker.internal:4200/*"
      ],
      "webOrigins": ["*"]
    }
  ],
  "users": [
    {
      "username": "testuser",
      "email": "testuser@example.com",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        { "type": "password", "value": "password", "temporary": false }
      ],
      "realmRoles": ["developers"]
    }
  ]
